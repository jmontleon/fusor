{{#em-modal configName="bs" id="editGlobalServiceConfigModal" closeIfClickedOutside=handleOutsideClick open-if=editGlobalServiceConfigModalOpened close-if=editGlobalServiceConfigModalClosed in-async=async}}

    {{#em-modal-title}}
        {{#em-modal-toggler class="close"}}
            <span aria-hidden="true" {{action "cancelGlobalServiceConfig"}}>Ã—</span><span class="sr-only">Close</span>
        {{/em-modal-toggler}}
        <h4 class="modal-title">Edit Global Configuration</h4>
    {{/em-modal-title}}

    {{#em-modal-body}}
        {{#if async}}
            Submitting, please wait...
        {{else}}
          <div role="tabpanel" class="tab-pane active global-config-settings-content">
              <div class="form-horizontal">
                  <fieldset>
                      <div class="required">
                        {{#each globalPlanParameters as |planParameter|}}
                          {{#if planParameter.isBoolean}}
                            {{check-f label=planParameter.label checked=planParameter.newValue labelSize='col-md-6' inputSize='col-md-5' isRequired=false helpText=planParameter.description}}
                          {{else}}
                            {{text-f label=planParameter.label value=planParameter.newValue type=planParameter.type labelSize='col-md-6' inputSize='col-md-5' isRequired=false helpText=planParameter.description}}
                          {{/if}}
                        {{/each}}
                      </div>
                  </fieldset>
              </div>
          </div>
        {{/if}}
    {{/em-modal-body}}

    {{#em-modal-footer class="modal-button-bar"}}
        <button type="cancel" class="btn btn-default" disabled="{{async}}" {{action "cancelGlobalServiceConfig"}}>Cancel</button>
        <button type="submit" class="btn btn-primary" disabled="{{async}}" {{action "saveGlobalServiceConfig"}}>Save</button>
    {{/em-modal-footer}}
{{/em-modal}}
