{{#if readOnly}}
  {{#if hasAssignedNodes}}
    <div style="padding-left: 15px;">
      {{role.count}} {{role.name}}
      {{#if multipleAssignedNodes}}Nodes{{else}}Node{{/if}}
    </div>
  {{/if}}
{{else}}
    <li class="role role-{{role.roleType}} {{assignedClass}}">
    <div class="deployment-role-label">
        {{role.label}}
    </div>
    {{#if roleAssigned}}
      {{view "select" class="node-count-selectpicker"
        content=availableOptions value=role.count}}
    {{/if}}
    {{#unless readOnly}}
      <a class="role-option delete">
          <i class="fa fa-times" {{action "removeRole"}}></i>
      </a>
      <a class="role-option edit" >
          <i class="fa fa-pencil" {{action "editRole"}}></i>
      </a>
    {{/unless}}
</li>
{{/if}}
